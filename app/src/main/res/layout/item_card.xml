<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_8"
    card_view:cardCornerRadius="@dimen/stroke_width"
    card_view:cardElevation="4dp"
    card_view:contentPadding="@dimen/padding_2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_initials"
            android:layout_width="@dimen/list_profile_img"
            android:layout_height="@dimen/list_profile_img"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@color/color_bg_initials"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@color/color_text_initial"
            android:textSize="@dimen/font_name_list_initial"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_toEndOf="@+id/txt_initials"
            android:layout_toRightOf="@id/txt_initials"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:theme="@style/ListTextTheme" />

            <TextView
                android:id="@+id/txt_org"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/margin_3"
                android:layout_weight="1"
                android:textColor="@color/color_button_select"
                android:theme="@style/ListTextTheme" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
