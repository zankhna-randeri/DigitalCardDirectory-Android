<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextDetailTheme" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_22</item>
    </style>

    <style name="HeaderTextTheme" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="AppTitleTheme" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_32</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonTheme" parent="Theme.AppCompat">
        <item name="android:padding">@dimen/padding_12</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/color_button_select</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_22</item>
    </style>

    <style name="FlatButton" parent="Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
        <item name="colorControlHighlight">@color/color_control_highlight</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textSize">@dimen/font_20</item>
    </style>

    <style name="TabButtonTheme" parent="android:Widget.Button">
        <item name="android:background">@drawable/app_button_selector</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_20</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
